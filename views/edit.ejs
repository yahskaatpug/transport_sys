<% layout('sidebar.ejs') -%>

<div class="container">
    <div class="row">
         <h2 style="text-align: center;">Edit Bus Detail</h2>
        <div style="width:30%; margin: 30px auto;">  
            <form action="/profile/<%= bid %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= current_bus_details.route.info%>" name = "routeInfo">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= current_bus_details.timing.startTime %>" name = "startTime" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= current_bus_details.driver.firstName %> <%= current_bus_details.driver.lastName %>" name = "driverName">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= current_bus_details.driver.userMobile %>" name = "mobileNum">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= current_bus_details.route.fare %>" name = "fare">
                </div>
                <div>
                    <a class="btn btn-success" href="/profile/<%= bid%>">submit</a>
                </div>
            </form>
        </div>

    </div>
    
    
</div>
